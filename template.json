{
    "package": {
        "scripts": {
            "start": "craco start",
            "build": "craco build",
            "test": "craco test",
            "eject": "craco eject",
            "storybook": "start-storybook -p 6006",
            "build-storybook": "build-storybook",
            "api:build": "run-s api:clean openapi2aspida",
            "api:clean": "rimraf src/apis/bin",
            "openapi2aspida": "openapi2aspida -c=aspida.config.cjs",
            "submodule:update": "git submodule update --remote",
            "prepare": "husky install",
            "lint-staged": "lint-staged --config .lintstagedrc.js"
        },
        "eslintConfig": {
            "extends": [
                "react-app",
                "react-app/jest",
                "plugin:tailwind/recommended"
            ],
            "plugins": ["tailwind"],
            "parser": "@typescript-eslint/parser",
            "parserOptions": {
                "project": "./tsconfig.json"
            },
            "rules": {
                "react/prop-types": "off",
                "react/jsx-uses-react": "off",
                "react/react-in-jsx-scope": "off",
                "import/no-unresolved": "off",
                "import/order": [
                    "error",
                    {
                        "alphabetize": {
                            "order": "asc"
                        }
                    }
                ],
                "@typescript-eslint/strict-boolean-expressions": [
                    "error",
                    {
                        "allowString": false,
                        "allowNumber": false,
                        "allowNullableObject": false,
                        "allowNullableBoolean": false,
                        "allowNullableString": false,
                        "allowNullableNumber": false,
                        "allowAny": false
                    }
                ],
                "@typescript-eslint/no-explicit-any": "error",
                "@typescript-eslint/restrict-template-expressions": [
                    "error",
                    {
                        "allowNumber": false,
                        "allowBoolean": false,
                        "allowAny": false,
                        "allowNullish": false,
                        "allowRegExp": false
                    }
                ],
                "@typescript-eslint/no-unused-vars": "error",
                "@typescript-eslint/ban-types": "error",
                "max-params": ["error", 3],
                "react-native/no-raw-text": "off",
                "tailwind/class-order": "off"
            },
            "ignorePatterns": ["src/apis/bin"]
        },
        "browserslist": {
            "production": [">0.2%", "not dead", "not op_mini all"],
            "development": [
                "last 1 chrome version",
                "last 1 firefox version",
                "last 1 safari version"
            ]
        },
        "dependencies": {
            "@aspida/axios": "^1.11.0",
            "@aspida/react-query": "^1.11.0",
            "@headlessui/react": "^1.7.13",
            "@tailwindcss/forms": "^0.5.3",
            "@tanstack/react-query": "^4.27.0",
            "@testing-library/jest-dom": "^5.14.1",
            "@testing-library/react": "^13.0.0",
            "@testing-library/user-event": "^13.2.1",
            "@types/jest": "^29.5.0",
            "@types/node": "^16.7.13",
            "@types/react": "^18.0.0",
            "@types/react-dom": "^18.0.0",
            "axios": "^1.3.4",
            "clsx": "^1.2.1",
            "react": "^18.2.0",
            "react-dom": "^18.2.0",
            "react-hook-form": "^7.43.7",
            "react-router-dom": "^6.10.0",
            "react-scripts": "5.0.1",
            "typescript": "^4.4.2",
            "web-vitals": "^2.1.0"
        },
        "devDependencies": {
            "@babel/core": "^7.21.3",
            "@craco/craco": "^7.1.0",
            "@storybook/addon-actions": "^6.5.16",
            "@storybook/addon-essentials": "^6.5.16",
            "@storybook/addon-interactions": "^6.5.16",
            "@storybook/addon-links": "^6.5.16",
            "@storybook/builder-webpack5": "^6.5.16",
            "@storybook/manager-webpack5": "^6.5.16",
            "@storybook/react": "^6.5.16",
            "@storybook/testing-library": "^0.0.13",
            "babel-loader": "^8.3.0",
            "eslint-plugin-tailwind": "^0.2.1",
            "husky": "^8.0.3",
            "hygen": "^6.2.11",
            "jest": "^29.5.0",
            "jest-environment-jsdom": "^29.5.0",
            "lint-staged": "^13.2.0",
            "msw": "^1.1.0",
            "npm-run-all": "^4.1.5",
            "openapi2aspida": "^0.21.0",
            "prettier": "^2.8.4",
            "prettier-plugin-tailwindcss": "^0.2.6",
            "rimraf": "^4.4.0",
            "tailwindcss": "^3.2.7",
            "ts-jest": "^29.0.5"
        },
        "msw": {
            "workerDirectory": "public"
        }
    }
}
